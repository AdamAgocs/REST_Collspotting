{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Hyper JSON schema of CollaborationSpotting project at CERN for validating 'Edge' element of a graph",
    "id": "http://localhost:8000/schemas/validators/edge_validator.json#",
    "default": {},
    "definitions": {
        "positiveInteger": {
            "minimum": 0,
            "type": "integer"
        },
        "positiveIntegerDefault0": {
            "allOf": [
                {
                    "$ref": "#/definitions/positiveInteger"
                },
                {
                    "default": 0
                }
            ]
        },
        "schemaArray": {
            "items": {
